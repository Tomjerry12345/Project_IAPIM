<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".autentikasi.SignInActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/logo_iapim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="20dp"
        app:endIconMode="custom"
        app:startIconDrawable="@drawable/profile"
        android:id="@+id/no_hp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        app:boxStrokeColor="@color/color_signup"
        style="@style/text_input_style"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:hint="@string/no_hp">

            <com.google.android.material.textfield.TextInputEditText
                app:endIconMode="@drawable/profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password"
        android:layout_marginTop="20dp"
        app:endIconMode="password_toggle"
        app:layout_constraintEnd_toEndOf="@+id/no_hp"
        app:layout_constraintStart_toStartOf="@+id/no_hp"
        app:layout_constraintTop_toBottomOf="@+id/no_hp"
        android:layout_width="250dp"
        android:layout_height="50dp"
        app:boxStrokeColor="@color/color_signup"
        style="@style/text_input_style"
        android:hint="@string/password">

            <com.google.android.material.textfield.TextInputEditText
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

